@model MyPhotosASP.Pages.Medias.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Media</h1>

@*<p>
    <a asp-page="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].@event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medias[0].type)
            </th>
            <th>
                More
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Medias)
        {
        <tr style="font-size:small">
            <td>
                @Html.DisplayFor(model => item.Id)
            </td>
            <td>
                @Html.DisplayFor(model => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.@event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                <a asp-page="/Persons/List" asp-route-id="@item.name">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>